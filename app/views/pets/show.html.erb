<h1><%= @pet.name %></h1>
<h3><%= @pet.age %> years old</h3>
<h3><%= @pet.breed %></h3>
<% if @pet.adoptable == false %>
  <h3>Pet No Longer Adoptable</h3>
<% else %>
  <h3>Pet Available</h3>
<% end %>
<h3><%= @pet.shelter_name %></h3>

<p><%= link_to "Update #{@pet.name}", "pets/#{@pet.id}/edit" %></p>
<p><%= link_to "Delete #{@pet.name}", "/pets/#{@pet.id}", method: :delete %></p>
