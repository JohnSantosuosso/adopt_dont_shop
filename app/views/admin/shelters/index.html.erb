<h1>Admin View</h1>

<div id = "pet_shelters_admin">
    <h2>All Shelters</h2>
    <%@shelters.each do |shelter|%>
      <p class = "shelter_name"><%= link_to shelter.name, "/admin/shelters/#{shelter.id}"%></p>
<%end%>
</div>

<div id = "pending_applications_admin">
  <h2>Shelters With Pending Applications</h2>
  <%@filtered_shelters.each do |shelter|%> 
    <p class = "shelter_name"><%= link_to shelter.name, "/admin/shelters/#{shelter.id}"%></p>
  <%end%>
</div>
